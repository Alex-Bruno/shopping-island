{% extends 'base.html.twig' %}

{% block title %}Tipos de pagamento{% endblock %}
{% block totalItems %}<span class="badge">{{ payments | length }}</span>{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        {% include 'layout/table/header.html.twig' with {'titles': ['Nome', 'Desconto', 'Opções'] } %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for payment in payments %}
                        <tr>
                            <td>{{ payment.name }}</td>
                            <td>{{ payment.discount }}</td>
                            <td></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
